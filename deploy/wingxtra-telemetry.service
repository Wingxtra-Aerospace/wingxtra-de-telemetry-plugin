[Unit]
Description=Wingxtra DroneEngage Telemetry Plugin
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/wingxtra-de-telemetry-plugin
EnvironmentFile=/etc/wingxtra-telemetry.env
ExecStart=/opt/wingxtra-de-telemetry-plugin/.venv/bin/python -u /opt/wingxtra-de-telemetry-plugin/main.py
Restart=always
RestartSec=2

# Sniffing requires raw socket privileges
User=root

[Install]
WantedBy=multi-user.target
